{
  "name": "markco",
  "displayName": "Markco - Markdown Comments",
  "description": "Interactive commenting system for Markdown files with inline highlights and sidebar navigation",
  "version": "0.1.8",
  "publisher": "OrenMaoz",
  "repository": {
    "type": "git",
    "url": "https://github.com/ormaoz_microsoft/Markco.git"
  },
  "bugs": {
    "url": "https://github.com/ormaoz_microsoft/Markco/issues"
  },
  "homepage": "https://github.com/ormaoz_microsoft/Markco#readme",
  "icon": "media/markco.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markco.addComment",
        "title": "Add Comment",
        "category": "Markco",
        "icon": "$(comment)"
      },
      {
        "command": "markco.deleteComment",
        "title": "Delete Comment",
        "category": "Markco"
      },
      {
        "command": "markco.editComment",
        "title": "Edit Comment",
        "category": "Markco"
      },
      {
        "command": "markco.toggleSidebar",
        "title": "Toggle Comment Sidebar",
        "category": "Markco"
      },
      {
        "command": "markco.navigateToComment",
        "title": "Navigate to Comment",
        "category": "Markco"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "markco-sidebar",
          "title": "Markco Comments",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "markco-sidebar": [
        {
          "type": "webview",
          "id": "markco.commentSidebar",
          "icon": "media/markco.svg",
          "name": "Comments"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "when": "editorLangId == markdown && editorHasSelection",
          "command": "markco.addComment",
          "group": "markco"
        }
      ],
      "editor/title": [
        {
          "when": "editorLangId == markdown",
          "command": "markco.addComment",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "markco.addComment",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m",
        "when": "editorLangId == markdown && editorHasSelection"
      }
    ],
    "configuration": {
      "title": "Markco",
      "properties": {
        "markco.highlightColor": {
          "type": "string",
          "default": "rgba(255, 212, 0, 0.3)",
          "description": "Background color for comment highlights"
        },
        "markco.highlightBorderColor": {
          "type": "string",
          "default": "rgba(255, 212, 0, 0.8)",
          "description": "Border color for comment highlights"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.44",
    "uuid": "^9.0.0"
  }
}
