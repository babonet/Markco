{
  "name": "commark",
  "displayName": "ComMark - Markdown Comments",
  "description": "Interactive commenting system for Markdown files with inline highlights and sidebar navigation",
  "version": "0.1.0",
  "publisher": "commark",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commark.addComment",
        "title": "Add Comment",
        "category": "ComMark",
        "icon": "$(comment)"
      },
      {
        "command": "commark.deleteComment",
        "title": "Delete Comment",
        "category": "ComMark"
      },
      {
        "command": "commark.editComment",
        "title": "Edit Comment",
        "category": "ComMark"
      },
      {
        "command": "commark.toggleSidebar",
        "title": "Toggle Comment Sidebar",
        "category": "ComMark"
      },
      {
        "command": "commark.navigateToComment",
        "title": "Navigate to Comment",
        "category": "ComMark"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "commark-sidebar",
          "title": "ComMark Comments",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "commark-sidebar": [
        {
          "type": "webview",
          "id": "commark.commentSidebar",
          "name": "Comments"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "when": "editorLangId == markdown && editorHasSelection",
          "command": "commark.addComment",
          "group": "commark"
        }
      ],
      "editor/title": [
        {
          "when": "editorLangId == markdown",
          "command": "commark.addComment",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "commark.addComment",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m",
        "when": "editorLangId == markdown && editorHasSelection"
      }
    ],
    "configuration": {
      "title": "ComMark",
      "properties": {
        "commark.highlightColor": {
          "type": "string",
          "default": "rgba(255, 212, 0, 0.3)",
          "description": "Background color for comment highlights"
        },
        "commark.highlightBorderColor": {
          "type": "string",
          "default": "rgba(255, 212, 0, 0.8)",
          "description": "Border color for comment highlights"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "uuid": "^9.0.0"
  }
}
